<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.gabrielgmacedo.travelapp.SignUp_Activity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@color/colorPrincipal"
            android:orientation="vertical">
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="380dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="135dp"
            android:elevation="4dp"
            app:cardCornerRadius="30dp"
            >

            <ImageView
                android:layout_marginTop="11dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_search_black_24dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:paddingLeft="58dp"
                android:paddingRight="10dp"
                android:hint="Search"
                android:background="#00000000"
                android:textSize="19sp"
                android:textColor="@color/colortext"
                />
            
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="210dp"
            android:elevation="4dp"
            app:cardCornerRadius="30dp"
            >

        <LinearLayout
            android:background="@drawable/Greece"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#96101010"
                android:text="Greece"
                android:textSize="35sp"
                android:textColor="#fff"
                android:textAllCaps="false"/>

        </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="340dp"
            android:elevation="4dp"
            app:cardCornerRadius="30dp"
            >

            <LinearLayout
                android:background="@drawable/united_states"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#96101010"
                    android:text="United States"
                    android:textSize="35sp"
                    android:textColor="#fff"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="470dp"
            android:elevation="4dp"
            app:cardCornerRadius="30dp"
            >

            <LinearLayout
                android:background="@drawable/londo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#96101010"
                    android:text="United Kindom"
                    android:textSize="35sp"
                    android:textColor="#fff"
                    android:textAllCaps="false"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</LinearLayout>
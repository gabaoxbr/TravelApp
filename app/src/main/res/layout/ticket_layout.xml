<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.gabrielgmacedo.travelapp.SignUp_Activity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/colorPrincipal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="160dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginTop="100dp"
                android:background="@drawable/logoback2"
                android:src="@drawable/nave"
                />



        </LinearLayout>

<RelativeLayout
    android:gravity="center_horizontal"
    android:layout_marginTop="225dp"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <Button
        android:id="@+id/btn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="Round"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="18dp"

        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/one"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="One way"
        android:layout_below="@+id/nome"
        android:textSize="17sp"

    />

    <TextView

        android:layout_marginTop="15dp"
        android:layout_marginLeft="65dp"
        android:layout_toRightOf="@+id/one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multi"
        android:layout_below="@+id/nome"
        android:textSize="17sp"

        />
</RelativeLayout>
        
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="310dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="50dp">


            <TextView

                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textColor="#d4d3d3"
                android:paddingLeft="20dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_pin_drop_black_24dp"
                />

            <TextView
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="To"
                android:textColor="#d4d3d3"
                android:paddingRight="133dp"
                android:textSize="18sp"
                android:drawableLeft="@drawable/ic_pin_drop_black_24dp"

                />

            </RelativeLayout>

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView

                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DepartureDate"
                    android:textColor="#d4d3d3"
                    android:paddingLeft="20dp"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_date_range_black_24dp"
                    />

                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Return date"
                    android:textColor="#d4d3d3"
                    android:paddingRight="60dp"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_directions_car_black_24dp"

                    />

            </RelativeLayout>


            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView

                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number of passenger"
                    android:textColor="#d4d3d3"
                    android:paddingLeft="20dp"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_person_black_24dp"
                    />

                <TextView
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flight Class"
                    android:textColor="#d4d3d3"
                    android:paddingRight="60dp"
                    android:textSize="18sp"
                    android:drawableLeft="@drawable/ic_attach_money_black_24dp"

                    />

            </RelativeLayout>


            <TextView
                android:paddingLeft="260dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More details"
                android:textColor="@color/colortext"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:textSize="18sp"
                />

            <Button
                android:layout_marginTop="30dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:text="Search Flights"
                android:textColor="#fff"
                android:textSize="19dp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                />



        </LinearLayout>







    </RelativeLayout>



</LinearLayout>
